<!doctype html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="/img/favicon.ico" type="image/x-icon">
    <title>Iniciar sesión | 🏥</title>
    <!-- CSS -->
    <link rel="stylesheet" href="css/main.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">

</head>

<body>

    <main class="form-signin w-100 m-auto text-center">
        <form action="/auth" method="POST">
            <img class="mb-4" src="/img/logo.svg" alt="" width="150" height="auto">
            <h1 class="h4 mb-3 fw-normal text-muted">Iniciar sesión</h1>

            <div class="form-floating">
                <input type="number" name="user" class="form-control" id="floatingInput" placeholder="Indentificación">
                <label for="floatingInput">Indentificación</label>
            </div>
            <div class="form-floating">
                <input type="password" name="password" class="form-control" id="floatingPassword"
                    placeholder="Constraseña">
                <label for="floatingPassword">Constraseña</label>
            </div>

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" value="remember-me"> Recordar usuario
                </label>
            </div>
            <button class="w-100 btn btn-lg btn-info" type="submit">Ingresar</button>
        </form>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if(typeof alert !='undefined' ) {%>
        <script>
            Swal.fire({
                title: '<%= alertTitle %>',
                text: '<%= alertMessage%>',
                icon: '<%= alertIcon%>',
                showCancelButton: '<%= showCancelButton%>',
                time: '<%= time %>'
            }).then(() => {
                window.location = '/<%=ruta%>'
            })
        </script>
        <% }%>
</body>

</html>