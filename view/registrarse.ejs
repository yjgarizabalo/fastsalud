<!doctype html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="/img/favicon.ico" type="image/x-icon">
    <title>Registrarse | üè•</title>
    <!-- CSS -->
    <link rel="stylesheet" href="css/main.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">

</head>

<body>

    <main class="form-register  w-100 m-auto text-center">
        <form action="/register" method="POST">
            <img class="mb-4" src="/img/logo.svg" alt="" width="150" height="auto">
            <h1 class="h4 mb-3 fw-normal text-muted">Crear Usuario</h1>

            <div class="form-floating mb-2">
                <input type="number" name="user" class="form-control" id="floatingInput" placeholder="Identifaci√≥n"
                    required>
                <label for="floatingInput">Identifaci√≥n</label>
            </div>
            <div class="form-floating mb-2">
                <input type="text" name="nombre" class="form-control" id="floatingInput" placeholder="Nombre" required>
                <label for="floatingInput">Nombre Completo</label>
            </div>
            <select class="form-select p-3 mb-2" aria-label="Rol" id="rol" name="rol">
                <option selected>Cargo</option>
                <option value="administrador">Administrador</option>
                <option value="auxliar">Auxiliar</option>
                <option value="auxilar-salud">Auxiliar de salud</option>
                <option value="medico">Medico</option>
                <option value="mantenimiento">Mantenimiento</option>
            </select>
            <div class="form-floating mb-4">
                <input type="password" name="password" class="form-control" id="floatingPassword"
                    placeholder="Constrase√±a" required>
                <label for="floatingPassword">Constrase√±a</label>
            </div>


            <div class="row">
                <div class="col-md-6">
                    <a href="/" class="w-100 btn btn-lg btn-light">Regresar</a>
                </div>
                <div class="col-md-6">
                    <button class="w-100 btn btn-lg btn-info" type="submit">Guardar</button>
                </div>
            </div>

        </form>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if(typeof alert !='undefined' ) {%>
        <script>
            Swal.fire({
                title: '<%= alertTitle %>',
                text: '<%= alertMessage%>',
                icon: '<%= alertIcon%>',
                showCancelButton: '<%= showCancelButton%>',
                time: '<%= time %>'
            }).then(() => {
                window.location = '/ <%= ruta%>'
            })
        </script>
        <% }%>
</body>

</html>